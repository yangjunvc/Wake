<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_main"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">
            <com.android.wako.widget.CircleImageView
                android:id="@+id/order_headimg"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:scaleType="centerCrop"
                android:src="@drawable/touxiang"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_padding"/>
            <RelativeLayout
                android:layout_toLeftOf="@+id/order_service_price"
                android:layout_toRightOf="@+id/order_headimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="@dimen/title_padding"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        style="@style/textStyle_4C4C4C_15"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/meng_service"
                        android:layout_gravity="center_vertical"
                        style="@style/textStyle_999999_14"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/order_service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/title_padding"
                android:layout_centerVertical="true"
                style="@style/textStyle_FF9211_15"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zhifufangshi"
                android:drawablePadding="6dip"
                android:gravity="center"
                android:padding="@dimen/title_padding"
                android:text="@string/order_pay_way"
                style="@style/textStyle_4C4C4C_13"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/title_padding"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/weixin"
                        android:drawablePadding="10dip"
                        android:text="@string/weixin_pay"
                        style="@style/textStyle_4C4C4C_15"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@color/line_background"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/zhifubao"
                        android:drawablePadding="10dip"
                        android:text="@string/alipay_pay"
                        style="@style/textStyle_4C4C4C_15"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <RadioGroup
                        android:id="@+id/order_radio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:id="@+id/weixin_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/title_padding"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="@drawable/radio_selector"
                            android:layout_gravity="right"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:background="@color/line_background"/>
                        <RadioButton
                            android:id="@+id/alipay_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/title_padding"
                            android:layout_weight="1"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_selector"
                            android:layout_gravity="right"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_background"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/order_dou_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/title_padding"
                    android:text="@string/order_dou"
                    style="@style/textStyle_999999_14"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/order_dou_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dakai"
                    android:padding="@dimen/title_padding"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_background"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/entry_height"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/order_to_pay"
                android:layout_width="124dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/order_to_pay"
                style="@style/textStyle_white_16"
                android:background="@color/text_FF9211_color"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:layout_toLeftOf="@+id/order_to_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/title_padding"
                android:gravity="right"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:id="@+id/order_all_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/order_all"
                    style="@style/textStyle_4C4C4C_14"/>
                <TextView
                    android:id="@+id/order_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    style="@style/textStyle_FF9211_25"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>